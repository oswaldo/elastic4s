{
  "settings": {
    "analysis": {
      "char_filter": {
        "mapping_charfilter": {
          "type": "mapping",
          "mappings": [
            "ph=>f",
            "qu=>q"
          ]
        },
        "mapping_charfilter2": {
            "mappings": [ "x=>y" ],
            "type": "mapping"
        },
        "pattern_replace_charfilter": {
          "type": "pattern_replace",
          "pattern": "sample(.*)",
          "replacement": "replacedSample $1"
        }
      },
      "analyzer": {
        "patternAnalyzer": {
          "type": "pattern",
          "lowercase": true,
          "pattern": "[a-z]"
        },
        "mysnowball": {
          "type": "snowball",
          "language": "english",
          "stopwords": [
            "stop1",
            "stop2",
            "stop3"
          ]
        },
        "myAnalyzer2": {
          "type": "custom",
          "tokenizer": "myTokenizer1",
          "filter": [
            "myTokenFilter2",
            "myTokenFilter3",
            "myFrenchStemmerTokenFilter",
            "prTokenFilter",
            "myWordDelimiterTokenFilter"
          ]
        },
        "myAnalyzer3": {
          "type": "custom",
          "tokenizer": "lowercase",
          "filter": [
            "myTokenFilter1",
            "reverse",
            "myTokenFilter5",
            "myEdgeNGramTokenFilter",
            "stemmerTokenFilter"
          ],
          "char_filter": [
            "html_strip",
            "mapping_charfilter",
            "pattern_replace_charfilter"
          ]
        },
        "myAnalyzer4": {
          "type": "custom",
          "tokenizer": "myTokenizer4"
        },
        "myAnalyzer5": {
          "type": "custom",
          "tokenizer": "myTokenizer5"
        }
      },
      "normalizer": {
          "myNormalizer1": {
              "filter": [
                  "lowercase"
              ],
              "type": "custom"
          },
          "myNormalizer2": {
              "char_filter": [
                  "mapping_charfilter2"
              ],
              "filter": [
                  "uppercase"
              ],
              "type": "custom"
          }
      },
      "tokenizer": {
        "myTokenizer1": {
          "type": "standard",
          "max_token_length": 900
        },
        "myTokenizer4": {
          "type": "edgeNGram",
          "min_gram": 3,
          "max_gram": 17,
          "token_chars": [
            "digit",
            "letter"
          ]
        },
        "myTokenizer5": {
          "type": "nGram",
          "min_gram": 4,
          "max_gram": 18,
          "token_chars": [
            "letter",
            "punctuation"
          ]
        }
      },
      "filter": {
        "myTokenFilter2": {
          "type": "length",
          "min": 0,
          "max": 10
        },
        "myTokenFilter3": {
          "type": "unique",
          "only_on_same_position": true
        },
        "myFrenchStemmerTokenFilter": {
          "type": "stemmer",
          "name": "french"
        },
        "prTokenFilter": {
          "type": "pattern_replace",
          "pattern": "pattern",
          "replacement": "rep"
        },
        "myWordDelimiterTokenFilter": {
          "type": "word_delimiter",
          "generate_word_parts": true,
          "generate_number_parts": true,
          "catenate_all": true
        },
        "myTokenFilter1": {
          "type": "stop",
          "enable_position_increments": true,
          "ignore_case": true
        },
        "myTokenFilter5": {
          "type": "limit",
          "max_token_count": 5,
          "consume_all_tokens": false
        },
        "myEdgeNGramTokenFilter": {
          "type": "edgeNGram",
          "min_gram": 3,
          "max_gram": 50,
          "side": "front"
        },
        "stemmerTokenFilter": {
          "type": "stemmer_override",
          "rules": [
            "rule1",
            "rule2"
          ]
        }
      }
    }
  }
}
